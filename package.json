{
  "name": "@stupidassistant/workspace",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn workspaces run build",
    "prebuild": "yarn workspace @stupidassistant/types run build | yarn workspace @stupidassistant/classes run build",
    "lint": "eslint .",
    "pretest": "yarn lint",
    "test": "yarn workspaces run test",
    "start": "yarn start:client",
    "start:client": "yarn workspace @stupidassistant/app start",
    "start:server": "yarn workspace @stupidassistant/server start",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "12",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "css-loader": "^6.5.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "mini-css-extract-plugin": "^2.4.5",
    "mocha": "^9.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "~4.5.2",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
